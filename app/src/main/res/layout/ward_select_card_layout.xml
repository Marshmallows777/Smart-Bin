<?xml version="1.0" encoding="utf-8"?>
<com.github.captain_miao.optroundcardview.OptRoundCardView
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="48dp"
    style="@style/OptRoundCardView.Light"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:optRoundCardCornerRadius="0dp"
    app:optRoundCardLeftTopCorner="false"
    app:optRoundCardRightTopCorner="false"
    app:optRoundCardTopEdges="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="9dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wards_card"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_ward_text"
            android:textColor="#9A222A2C"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            />

        <com.jss.smartdustbin.model.NoDefaultSpinner
            android:id="@+id/spinner_wards_select"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/ward_prompt"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/black"
            android:layout_marginBottom="8dp"/>


    </LinearLayout>



</com.github.captain_miao.optroundcardview.OptRoundCardView>